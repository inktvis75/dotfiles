set filetype=on
filetype indent plugin on
syntax on
set nocompatible
set ruler
set number
set modelines=0
set visualbell
set encoding=utf-8
set textwidth=79
set termguicolors
set t_Co=256
set scrolloff=3
set backspace=indent,eol,start
set lazyredraw
set ttyfast
set laststatus=2
set showmode
set showcmd
set hlsearch
set incsearch
set ignorecase
set smartcase
set showmatch
set tabstop=4
set shiftwidth=4
set softtabstop=4
set expandtab
set autoindent
set smartindent
set cursorline
set cursorcolumn
set autoread
set background=dark

set list
set listchars=tab:▸\ ,eol:¬
set undolevels=1000

highlight ColorColumn ctermbg=grey guibg=#404040
highlight CursorColumn guibg=#ff0000 ctermbg=lightgray
highlight StatusLine NONE ctermbg=DarkGreen ctermfg=White cterm=NONE
